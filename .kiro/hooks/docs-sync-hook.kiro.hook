{
  "enabled": true,
  "name": "Documentation Sync",
  "description": "Monitors TypeScript source files, configuration files, and build scripts for changes and automatically updates project documentation in README.md and other documentation files to keep them in sync with code changes.",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "react-app/src/**/*.ts",
      "react-app/src/**/*.tsx",
      "react-app/*.ts",
      "react-app/*.js",
      "react-app/*.mjs",
      "react-app/package.json",
      "react-app/tsconfig*.json",
      "react-app/vite.config.ts",
      "react-app/vitest.config.ts",
      "react-app/eslint.config.js"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Source files have been modified in the React TypeScript project. Please review the changes and update the documentation accordingly. Focus on updating the README.md file and any other relevant documentation files (like DEPLOYMENT.md or TESTING_SETUP_SUMMARY.md) to reflect any new features, API changes, configuration updates, or architectural modifications. Ensure the documentation accurately describes the current state of the codebase, including any new dependencies, build processes, or usage instructions."
  }
}